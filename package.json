{
  "name": "vocrab",
  "version": "0.1.0",
  "description": "Vocrab helps users create and review vocab flashcards.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "cargo-cp-artifact -nc index.node -- cargo build --message-format=json-render-diagnostics",
    "build-debug": "npm run build --",
    "build-release": "npm run build -- --release",
    "install": "npm run build-release",
    "test": "cargo test"
  },
  "author": "Christopher Leap",
  "license": "MIT OR Apache-2.0",
  "devDependencies": {
    "cargo-cp-artifact": "^0.1",
    "electron": "^15.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cleap/vocrab.git"
  },
  "bugs": {
    "url": "https://github.com/cleap/vocrab/issues"
  },
  "homepage": "https://github.com/cleap/vocrab#readme"
}
